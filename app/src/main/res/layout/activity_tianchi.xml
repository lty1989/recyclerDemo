<?xml version="1.0" encoding="utf-8"?>
<com.lty.recyclerdemo.layout.TianchiFitRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lty.recyclerdemo.MainActivity">


    <com.lty.recyclerdemo.layout.FocusKeepRecyclerView
        android:id="@+id/focusKeepRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightDistance="200"/>


    <com.lty.recyclerdemo.layout.FocusKeepRecyclerView
        android:id="@+id/focusKeepRecyclerView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/focusKeepRecyclerView"
        app:layout_heightDistance="200"/>

    <FrameLayout
        android:id="@+id/itemDec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/focusKeepRecyclerView1"
        android:background="@android:color/black"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_heightDistance="200"
        app:layout_widthDistance="200"/>

    <FrameLayout
        android:id="@+id/itemDec1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemDec"
        android:background="@android:color/black"
        app:layout_heightDistance="400"
        app:layout_widthDistance="400"/>


</com.lty.recyclerdemo.layout.TianchiFitRelativeLayout>
